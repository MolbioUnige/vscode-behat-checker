{
    "name": "behat-checker",
    "displayName": "behat-checker",
    "description": "This is an VSCode extension to help you write feature files when using behat",
    "repository": {
        "type": "git",
        "url": "https://github.com/beeblebrox3/vscode-behat-checker"
    },
    "license": "MIT",
    "version": "0.2.0",
    "author": "Lu√≠s Henrique Faria <luish.faria@gmail.com>",
    "publisher": "beeblebrox3",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Linters"
    ],
    "activationEvents": [
        "onLanguage:feature",
        "onLanguage:gherkin"
    ],
    "main": "./extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Behat Checker Configuration",
            "properties": {
                "behatChecker.configFile": {
                    "type": "string",
                    "default": "config/behat.yml",
                    "description": "path to behat config file"
                },
                "behatChecker.trigger": {
                    "type": "string",
                    "default": "onSave",
                    "description": "When to lint the file (onChange or onSave)"
                },
                "behatChecker.debug": {
                    "type": "boolean",
                    "default": false,
                    "description": "Turn this setting on to show debug information"
                }
            }
        },
        "commands": [
            {
                "command": "behatChecker.updateCache",
                "title": "Update steps cache"
            },
            {
                "command": "behatChecker.reload",
                "title": "Reload the extension server"
            }
        ],
        "keybindings": [
            {
                "key": "ctrl+alt+p",
                "command": "behatChecker.updateCache"
            },
            {
                "key": "ctrl+alt+l",
                "command": "behatChecker.validate"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "./prepublish.sh",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "^6.0.40",
        "eslint": "^3.6.0",
        "mocha": "^2.3.3",
        "typescript": "^2.0.3",
        "vscode": "^1.0.0"
    },
    "dependencies": {
        "vscode-languageclient": "^2.6.2"
    }
}