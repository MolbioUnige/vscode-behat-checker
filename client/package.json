{
    "name": "behat-checker",
    "displayName": "behat-checker",
    "description": "",
    "license": "MIT",
    "version": "0.0.1",
    "author": "Lu√≠s Henrique Faria <luish.faria@gmail.com>",
    "publisher": "beeblebrox3",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Linters"
    ],
    "activationEvents": [
        "onLanguage:feature",
        "onLanguage:gherkin"
    ],
    "main": "./extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Behat Checker Configuration",
            "properties": {
                "behatChecker.configFile": {
                    "type": "string",
                    "default": "behat.yml",
                    "description": "path to behat config file"
                },
                "behatChecker.trigger": {
                    "type": "string",
                    "default": "onChange",
                    "description": "When to lint the file (onChange or onSave)"
                }
            }
        },
        "commands": [{
            "command": "behatChecker.updateCache",
            "title": "Update steps cache"
        }]
    },
    "scripts": {
        "vscode:prepublish": "",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "^6.0.40",
        "eslint": "^3.6.0",
        "mocha": "^2.3.3",
        "typescript": "^2.0.3",
        "vscode": "^1.0.0"
    },
    "dependencies": {
        "vscode-languageclient": "^2.6.2"
    }
}
